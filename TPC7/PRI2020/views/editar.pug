
extends layout



block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal.w3-margin-top
                h3 Registar Aluno
            .w3-container
                form(action=`/alunos/${user._id}`, method='POST')
                    label
                        b Nome
                    input.w3-input.w3-border.w3-light-grey(type="text", name="Nome", value= user.Nome)
                    label
                        b Número
                    input.w3-input.w3-border.w3-light-grey(type="text", name="Número", value= user.Número)
                    label
                        b Git
                    input.w3-input.w3-border.w3-light-grey(type="text", name="Git", value= user.Git)
                    
                    
                    input(type="submit", value="Editar")



            address.w3-right Voltar à página principal 
                a(href="/alunos/") Voltar
            footer(class="w3-container w3-teal")
