extends layout
block content
    .w3-card-4
      header.w3-container.w3-teal
        h3 Lista de Alunos
        button.w3-button.w3-teal.style
          a(href="/alunos/registar") Registar
      if lista.length > 0
        .w3-container
          table(class="w3-table-all")
            tr 
              th Número
              th Nome 
              th Git

            each a in lista
              tr
                td= a.Número
                td 
                  a(href="/alunos/"+ a._id)  #{a.Nome}    
                td= a.Git
                td
                   form(method='GET' action=`/alunos/editar/${a._id}`)
                      input(type='submit' value='Editar')
                td
                   form(method='POST' action=`/eliminar/${a._id}`)
                      input(type='submit' value='Eliminar')
                  




      else
        div(class="w3-container")
          p Ainda não há alunos registados...
      footer(class="w3-container w3-teal")
        address Gerado por galuno :: 2020-Novembro, helena